<h1 class="text-center">Burgers!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Burgers that are not devoured!</h2>

            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burger/burger-block devour=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Add a Burger</h2>
            <form class="create-form">
            
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>

              <div class="form-group">
                <label for="sleepy">Devoured?</label><br>
                <input type="radio" name="sleepy" value="1" checked> Devoured!<br>
                <input type="radio" name="sleepy" value="0"> Not devoured
              </div>

              <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Burgers that are devoured!</h2>

            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burger/burger-block devour=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
    </div>
</div>