<h1 class="text-center burgers">BURGERS!</h1>
<div class="container main-container">
    <div class="row">
        <div class="col-md-4 text-left">
            <h2>Burgers that are not devoured!</h2>

            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burger/burger-block devour=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
        <div class="col-md-4 text-center">
            <div class="add-block">
                <h2>Add a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>
                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
        <div class="col-md-4 text-right">
            <h2>Burgers that are devoured!</h2>

            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burger/burger-block devour=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
    </div>
</div>